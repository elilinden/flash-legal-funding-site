<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }} | Flash Legal Funding</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700;800&display=swap" rel="stylesheet" />
  
  <style>
    /* --- GLOBAL LIGHT THEME --- */
    :root{
      --ink:#11153a;
      --ink-soft:#2a2f57;
      --brand:#3b5bff;
      --brand-dark:#2a35d9;
      --accent:#00a59c;
      --sky:#cfeeff;
      --sky-2:#e9f6ff;
      --nav:#ffffff;
      --nav-border:#e8ecf6;
      --muted:#6a6f90;
      --panel:#f7f8fc;
      --dark:#1a1b4d;
      --dark-2:#141539;
      --card:#ffffff;
      --shadow:0 18px 50px rgba(22,26,64,.12);
      --radius:22px;
      --max:1100px;
    }

    *{box-sizing:border-box}
    html{scroll-behavior:smooth}
    body{
      margin:0;
      font-family: "Manrope", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
      color:var(--ink);
      background:#fff;
      line-height:1.6;
    }

    a{color:inherit; text-decoration:none}
    img, video{max-width:100%; display:block}
    .container{max-width:var(--max); margin:0 auto; padding:0 24px}

    /* --- HEADER STYLES --- */
    .topbar{
      background: #b7dcff;
      border-bottom:1px solid #9dc7ff;
      color:#1c2357;
      font-weight:600;
      text-align:center;
      padding:8px 12px;
      font-size:14px;
    }

    header{
      position:sticky; top:0; z-index:50;
      background:var(--nav);
      border-bottom:1px solid var(--nav-border);
    }
    .nav{
      display:flex; align-items:center; justify-content:space-between;
      gap:16px;
      padding:14px 0;
    }
    .brand{
      display:flex; align-items:center; gap:12px;
      font-weight:800; letter-spacing:.3px;
      color:#111;
    }
    .brand img{height:42px; width:auto}
    
    nav ul{
      list-style:none; margin:0; padding:0;
      display:flex; gap:22px;
      color:var(--ink-soft);
      font-weight:600; font-size:15px;
    }
    nav a:hover{color:var(--brand)}
    
    .btn{
      display:inline-flex; align-items:center; justify-content:center;
      padding:12px 24px;
      border-radius:999px;
      background:var(--brand);
      color:#fff;
      font-weight:700;
      border:0;
      box-shadow:0 10px 24px rgba(59,91,255,.25);
      transition:transform .15s ease, box-shadow .15s ease;
    }
    .btn:hover{transform:translateY(-1px); box-shadow:0 14px 28px rgba(59,91,255,.28)}
    .menuBtn{display:none; background:transparent; border:0; font-size:22px; color:var(--ink)}

    /* --- SHARE BUTTON STYLES --- */
    .share-wrapper {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 24px 60px; /* Aligns with blog width */
      text-align: center;
    }
    .share-label {
      font-size: 14px;
      font-weight: 800;
      letter-spacing: .05em;
      text-transform: uppercase;
      color: var(--muted);
      margin-bottom: 16px;
    }
    .share-row {
      display: flex;
      justify-content: center;
      gap: 12px;
      flex-wrap: wrap;
    }
    .share-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 20px;
      border-radius: 8px;
      border: 1px solid var(--nav-border);
      background: #fff;
      color: var(--ink-soft);
      font-weight: 700;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    .share-btn:hover {
      background: #f6f8ff;
      border-color: var(--brand);
      color: var(--brand);
      transform: translateY(-2px);
    }
    .share-btn svg { width: 18px; height: 18px; fill: currentColor; }

    /* --- FOOTER --- */
    footer{
      padding:24px 0;
      text-align:center;
      color:#6e7396;
      font-size:13px;
      background:#fff;
      border-top: 1px solid var(--nav-border);
    }
    footer a{color:inherit; text-decoration:underline; text-underline-offset:3px}
    footer a:hover{color:var(--brand)}

    @media (max-width: 980px){
      nav ul{display:none}
      .menuBtn{display:inline-block}
    }

    /* --- MOBILE HEADER FIX --- */
    @media (max-width: 600px) {
      /* Shrink logo slightly more to prevent crowding */
      .brand img { height: 28px; }
      
      /* Tighten the nav container */
      .nav { padding: 8px 0; gap: 4px; }

      /* FIX THE BUTTON: Smaller, centered text, compact */
      .nav .btn { 
        padding: 6px 14px;      /* Smaller padding */
        font-size: 12px;        /* Smaller text */
        min-height: 34px;       /* Consistent height */
        line-height: 1;         /* Forces text to center vertically */
        white-space: nowrap;    /* Prevents text wrapping */
        display: inline-flex;   /* Ensures flex centering works */
        align-items: center;    
        justify-content: center;
      }

      /* Adjust hamburger menu to match */
      .menuBtn { font-size: 24px; padding: 4px; }
    }
  </style>
</head>

<body>
  <div class="topbar">CALL US NOW: (859) 81-FLASH</div>

  <header>
    <div class="container">
      <div class="nav" id="nav">
        <a class="brand" href="/">
          <img src="/assets/logo.png" alt="Flash Legal Funding">
        </a>

        <nav aria-label="Primary">
          <ul id="menu">
            <li><a href="/">Home</a></li>
            <li><a href="/#services">Services</a></li>
            <li><a href="/#our-story">Our Story</a></li>
            <li><a href="/#what-is-it">What Is It?</a></li>
            <li><a href="/#testimonials">Testimonials</a></li>
            <li><a href="/faq/">FAQ</a></li>
            <li><a href="/blog/">Blog</a></li>
          </ul>
        </nav>

        <div style="display:flex; gap:12px; align-items:center;">
          <button class="menuBtn" id="menuBtn" aria-label="Open menu">â˜°</button>
          <a class="btn" href="/apply/">APPLY NOW</a>
        </div>
      </div>
    </div>
  </header>

  <main>
    {{ content | safe }}

    {% if tags and 'blog' in tags %}
    <div class="share-wrapper">
      <div class="share-label">Share this post</div>
      <div class="share-row">
        <button class="share-btn" onclick="shareTo('facebook')">
          <svg viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          Facebook
        </button>
        
        <button class="share-btn" onclick="shareTo('twitter')">
          <svg viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path></svg>
          X / Twitter
        </button>

        <button class="share-btn" onclick="shareTo('linkedin')">
          <svg viewBox="0 0 24 24"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
          LinkedIn
        </button>

        <button class="share-btn" onclick="copyPageLink()">
          <svg viewBox="0 0 24 24"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
          Copy Link
        </button>
      </div>
    </div>
    {% endif %}
  </main>

  <footer>
    <div class="container">
      2026 Flash Legal Funding. All Rights Reserved.
      <br />
      <a href="/terms-of-use/">Terms of Use</a> | <a href="/privacy-policy/">Privacy Policy</a> | <a href="/sitemap">Sitemap</a>
    </div>
  </footer>

  <script>
    const menuBtn = document.getElementById("menuBtn");
    const menu = document.getElementById("menu");
    if (menuBtn && menu) {
      menuBtn.addEventListener("click", () => {
        const open = menu.style.display === "flex";
        menu.style.display = open ? "none" : "flex";
        menu.style.flexDirection = "column";
        menu.style.background = "#fff";
        menu.style.position = "absolute";
        menu.style.top = "64px";
        menu.style.right = "24px";
        menu.style.padding = "14px";
        menu.style.border = "1px solid #e8ecf6";
        menu.style.borderRadius = "12px";
        menu.style.boxShadow = "0 12px 30px rgba(0,0,0,.08)";
      });
    }

    // --- Share Button Logic ---
    function shareTo(platform) {
      const url = encodeURIComponent(window.location.href);
      const title = encodeURIComponent(document.title);
      let link = "";
      
      if (platform === 'facebook') link = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
      if (platform === 'twitter') link = `https://twitter.com/intent/tweet?url=${url}&text=${title}`;
      if (platform === 'linkedin') link = `https://www.linkedin.com/sharing/share-offsite/?url=${url}`;
      
      window.open(link, '_blank', 'width=600,height=400');
    }

    function copyPageLink() {
      navigator.clipboard.writeText(window.location.href).then(() => {
        alert("Link copied to clipboard!");
      });
    }
  </script>
</body>
</html>
